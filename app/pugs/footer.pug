footer.footer
	.footer__wrapper.container
		.footer__body 
			.footer__main 
				a(href="#").footer__logo.footer-title Funiro.
				.footer__text Worldwide furniture store since 2020. We sell over 1000+ branded products on our website
				.footer__contacts.contacts-footer 
					a(href="#").contacts-footer__item.icon-location Sawojajar Malang, Indonesia
					a(href="tel:+6289 456 3455").contacts-footer__item.icon-phone +6289 456 3455
					a(href="www.funiro.com" target="_blank").contacts-footer__item www.funiro.com
			.footer__menu.menu-footer
				.menu-footer__column
					button(type="button").menu-footer__title.footer-title.init Menu
					ul.menu-footer__list 
						li.menu-footer__item
							a(href="#").menu-footer__link Products
						li.menu-footer__item
							a(href="#").menu-footer__link Rooms
