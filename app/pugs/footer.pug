							a(href="#").menu-footer__link Terms & Policy
				.menu-footer__column
					button(type="button").menu-footer__title.footer-title.init Account
					ul.menu-footer__list 
						li.menu-footer__item
							a(href="#").menu-footer__link My Account
						li.menu-footer__item
							a(href="#").menu-footer__link Checkout
						li.menu-footer__item
							a(href="#").menu-footer__link My Cart
						li.menu-footer__item
							a(href="#").menu-footer__link My catalog Us
				.menu-footer__column
					button(type="button").menu-footer__title.footer-title.init Stay Connected
					ul.menu-footer__list 
						li.menu-footer__item
							a(href="#").menu-footer__link Facebook
